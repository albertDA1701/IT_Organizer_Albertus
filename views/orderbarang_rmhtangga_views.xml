<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- it.orderrt tree view -->
    <record id="it_orderrt_view_tree" model="ir.ui.view">
        <field name="name">IT Order Peralatan Elektronik Rumah Tangga</field>
        <field name="model">it.orderrt</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="name"/>
                <field name="tanggal_pesan"/>
                <field name="total"/>
                <field name="orderdetail_rt_ids"/>
            </tree>
        </field>
    </record>

    <!-- it.orderrt form view -->
    <record id="it_orderrt_view_form" model="ir.ui.view">
        <field name="name">Form Order Peralatan Elektronik Rumah Tangga</field>
        <field name="model">it.orderrt</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                        <field name="name"/>
                        <field name="tanggal_pesan"/>
                    </group>

                    <group>
                        <field name="total"/>
                    
                        <notebook colspan="4">
                            <page name="rt" string="Peralatan Elektronik Rumah Tangga">
                                <field name="orderdetail_rt_ids">
                                    <tree editable='bottom'>
                                        <field name="rt_id"/>
                                        <field name="foto" widget="image"/>
                                        <field name="hrg_satuan"/>
                                        <field name="kuantitas"/>
                                        <field name="harga" sum='Total Harga'/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- it.orderrt action window -->
    <record id="it_orderrt_action" model="ir.actions.act_window">
        <field name="name">IT Order Peralatan Rumah Tangga</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">it.orderrt</field>
        <field name="view_mode">tree,form</field>
       
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem 
        id="it_order_rumah_tangga_menu_act" 
        name="Order Peralatan Rumah Tangga" 
        parent="it_order_menu_categ" 
        action="it_orderrt_action" 
        sequence="25"/>

</odoo>
