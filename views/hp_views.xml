<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- it.handphone tree view -->
    <record id="it_handphone_view_tree" model="ir.ui.view">
        <field name="name">Jenis Handphone/HP</field>
        <field name="model">it.handphone</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="name"/>
                <field name="brand"/>
                <field name="type"/>
                <field name="harga"/>
                <field name="kondisi"/>
                <field name="foto" widget="image"/>
                <field name="deskripsi"/>
            </tree>
        </field>
    </record>

    <!-- it.handphone form view -->
    <record id="it_handphone_view_form" model="ir.ui.view">
        <field name="name">Form Handphone/HP</field>
        <field name="model">it.handphone</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                        <field name="name"/>
                        <field name="brand"/>
                        <field name="type"/>
                        <field name="harga"/>
                        <field name="kondisi"/>
                    </group>

                    <group>
                        <field name="foto" widget="image"/>
                    </group>

                    <notebook>
                        <page string="SPESIFIKASI BARANG">
                            <field name="deskripsi"/> 
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- it.handphone action window -->
    <record id="it_handphone_action" model="ir.actions.act_window">
        <field name="name">Daftar Jenis Handphone/HP</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">it.handphone</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem 
        id="it_peralatan_hp_menu_act" 
        name="Handphone/HP" 
        parent="it_peralatan_menu_categ" 
        action="it_handphone_action" 
        sequence="10"/>

</odoo>
