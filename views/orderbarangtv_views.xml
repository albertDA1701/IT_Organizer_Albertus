<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- it.ordertv tree view -->
    <record id="it_ordertv_view_tree" model="ir.ui.view">
        <field name="name">IT Order Televisi(TV)</field>
        <field name="model">it.ordertv</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="name"/>
                <field name="tanggal_pesan"/>
                <field name="total"/>
                <field name="orderdetail_tv_ids"/>
            </tree>
        </field>
    </record>

    <!-- it.ordertv form view -->
    <record id="it_ordertv_view_form" model="ir.ui.view">
        <field name="name">Form Order Televisi(TV)</field>
        <field name="model">it.ordertv</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                        <field name="name"/>
                        <field name="tanggal_pesan"/>
                    </group>

                    <group>
                        <field name="total"/>
                    
                        <notebook colspan="4">
                            <page name="tv" string="Televisi">
                                <field name="orderdetail_tv_ids">
                                    <tree editable='bottom'>
                                        <field name="tv_id"/>
                                        <field name="foto" widget="image"/>
                                        <field name="hrg_satuan"/>
                                        <field name="kuantitas"/>
                                        <field name="harga" sum='Total Harga'/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- it.ordertv action window -->
    <record id="it_ordertv_action" model="ir.actions.act_window">
        <field name="name">IT Order Televisi/TV</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">it.ordertv</field>
        <field name="view_mode">tree,form</field>
       
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem 
        id="it_order_televisi_menu_act" 
        name="Order Televisi(TV)" 
        parent="it_order_menu_categ" 
        action="it_ordertv_action" 
        sequence="15"/>

</odoo>
