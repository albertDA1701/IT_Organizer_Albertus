<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- res.partner inherit form view -->
    <record id="res_partner_view_id" model="ir.ui.view">
        <field name="name">Form Pegawai</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <field name="vat" position="after">
                <field name="is_pegawai"/>
                <field name="is_customer"/>
            </field>

        </field>
    </record>

    <!-- res.partner action window -->
    <record id="res_partner_action" model="ir.actions.act_window">
        <field name="name">Daftar Pegawai</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem 
        id="it_partner_menu_act" 
        name="Daftar Pegawai" 
        parent="it_partner_menu_categ" 
        action="res_partner_action" 
        sequence="50"/>

</odoo>
