<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- it.laptop tree view -->
    <record id="it_laptop_view_tree" model="ir.ui.view">
        <field name="name">Jenis Laptop/PC</field>
        <field name="model">it.laptop</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="name"/>
                <field name="brand"/>
                <field name="jenis"/>
                <field name="type"/>
                <field name="harga"/>
                <field name="kondisi"/>
                <field name="foto" widget="image"/>
            </tree>
        </field>
    </record>

    <!-- it.laptop form view -->
    <record id="it_laptop_view_form" model="ir.ui.view">
        <field name="name">Form Laptop</field>
        <field name="model">it.laptop</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                        <field name="name"/>
                        <field name="brand"/>
                        <field name="jenis"/>
                        <field name="type"/>
                        <field name="harga"/>
                        <field name="kondisi"/>
                    </group>

                    <group>
                        <field name="foto" widget="image"/>
                    </group>

                    <notebook>
                        <page string="SPESIFIKASI BARANG">
                            <field name="deskripsi"/> 
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- it.laptop action window -->
    <record id="it_laptop_action" model="ir.actions.act_window">
        <field name="name">Daftar Jenis Laptop/PC</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">it.laptop</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem 
        id="it_peralatan_laptop_menu_act" 
        name="Laptop/PC" 
        parent="it_peralatan_menu_categ" 
        action="it_laptop_action" 
        sequence="20"/>

</odoo>
