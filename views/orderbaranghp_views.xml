<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- it.order tree view -->
    <record id="it_order_view_tree" model="ir.ui.view">
        <field name="name">IT Order</field>
        <field name="model">it.order</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="name"/>
                <field name="tanggal_pesan"/>
                <field name="total"/>
                <field name="orderdetail_ids"/>
            </tree>
        </field>
    </record>

    <!-- it.order form view -->
    <record id="it_order_view_form" model="ir.ui.view">
        <field name="name">Form Order</field>
        <field name="model">it.order</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                        <field name="name"/>
                        <field name="tanggal_pesan"/>
                    </group>

                    <group>
                        <field name="total"/>
                    
                        <notebook colspan="4">
                            <page name="hp" string="Handphone">
                                <field name="orderdetail_ids">
                                    <tree editable='bottom'>
                                        <field name="hp_id"/>
                                        <field name="foto" widget="image"/>
                                        <field name="hrg_satuan"/>
                                        <field name="kuantitas"/>
                                        <field name="harga" sum='Total Harga'/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- it.order action window -->
    <record id="it_order_action" model="ir.actions.act_window">
        <field name="name">IT Order Handphone(HP)</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">it.order</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem 
        id="it_order_menu_act" 
        name="Order Handphone" 
        parent="it_order_menu_categ" 
        action="it_order_action" 
        sequence="5"/>

</odoo>
